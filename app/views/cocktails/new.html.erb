<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.pexels.com/photos/1283219/pexels-photo-1283219.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260');">
  <div class="banner-content" id="create-cocktail-form">
    <h1>Create a new cocktail!</h1>
    <div class="form">
      <%= simple_form_for(@cocktail, defaults: { required: false }) do |f| %>
        <%= f.input :name %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.submit "Add a cocktail", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>


<%= link_to '<i class="fas fa-arrow-circle-left></i>'.html_safe, cocktails_path, class: "back-arrow" %>

