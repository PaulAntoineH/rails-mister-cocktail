<h1>Create a new cocktail!</h1>
<%= simple_form_for [@cocktail] do |f| %>
  <%= f.input :name %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.submit "Add a cocktail", class: "btn btn-primary" %>
<% end %>

<%= link_to "Back to cocktails", cocktails_path, class: "btn btn-primary" %>

